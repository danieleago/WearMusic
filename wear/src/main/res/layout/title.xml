<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black"
    android:id="@+id/title_view">

    <!---1000-->
    <TextView android:id="@+id/text_previous_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Previous Title"
        android:layout_gravity="center"
        />
    <TextView android:id="@+id/text_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_previous_title"
        android:text="Title"
        android:layout_gravity="center"
        />

    <TextView android:id="@+id/text_next_title"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="next Title"
    android:layout_below="@id/text_title"
    android:layout_gravity="center"
    />

</RelativeLayout>